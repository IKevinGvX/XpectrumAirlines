@page
@model Xpectrum_Structure.Pages.Administrador.IndexModel
@{
    ViewData["Title"] = "Panel de Administrador";
    Layout = "_Layout"; // o Layout personalizado si lo deseas
}

<section class="admin-panel">
    <div class="uk-container uk-margin-large-top">
        <h1>Bienvenido, Administrador</h1>
        <p class="subtitle">Panel de gestión del sistema</p>

        <div class="uk-grid uk-child-width-1-4@s uk-child-width-1-2@m uk-text-center" uk-grid>
            <!-- Gestión de Usuarios -->
            <a href="Administrador/GestionUsuarios" class="uk-card uk-card-default uk-card-body uk-border-rounded uk-box-shadow-hover-large">
                <div class="uk-card-media-top">
                    <i class="fas fa-users-cog icon"></i>
                </div>
                <div class="uk-card-footer">
                    <span>Gestión de Usuarios</span>
                </div>
            </a>

            <!-- Configuración del Sistema -->
            <a href="Administrador/ConfiguracionSistema" class="uk-card uk-card-default uk-card-body uk-border-rounded uk-box-shadow-hover-large">
                <div class="uk-card-media-top">
                    <i class="fas fa-cogs icon"></i>
                </div>
                <div class="uk-card-footer">
                    <span>Configuración del Sistema</span>
                </div>
            </a>

            <!-- Reportes Generales -->
            <a href="Administrador/Generales" class="uk-card uk-card-default uk-card-body uk-border-rounded uk-box-shadow-hover-large">
                <div class="uk-card-media-top">
                    <i class="fas fa-chart-line icon"></i>
                </div>
                <div class="uk-card-footer">
                    <span>Reportes Generales</span>
                </div>
            </a>

            <!-- Cerrar Sesión -->
            <a href="/Shared/Logout" class="uk-card uk-card-default uk-card-body uk-border-rounded uk-box-shadow-hover-large uk-card-muted">
                <div class="uk-card-media-top">
                    <i class="fas fa-sign-out-alt icon"></i>
                </div>
                <div class="uk-card-footer">
                    <span>Cerrar Sesión</span>
                </div>
            </a>
        </div>
    </div>
</section>

<style>
    .admin-panel {
        padding: 40px;
        text-align: center;
    }

    .subtitle {
        color: gray;
        margin-bottom: 30px;
    }

    .icon {
        font-size: 40px;
        color: #007bff;
    }

    .uk-card-footer {
        color: #333;
        font-weight: bold;
    }

    .uk-card-muted {
        background-color: #ffe6e6;
    }

        .uk-card-muted:hover {
            background-color: #ffcccc;
        }

    /* Añadir transición a los iconos */
    .uk-card:hover .icon {
        color: #d32f2f;
    }
</style>
