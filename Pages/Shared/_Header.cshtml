<link href="~/css/header.css" rel="stylesheet" />
<style>
    /* NAVBAR MODERNO */
    .bg-navbar {
        background: linear-gradient(90deg, #222 0%, #2a5298 100%);
        color: #fff;
    }
    .navbar {
        padding-top: 0.7rem;
        padding-bottom: 0.7rem;
        border-radius: 0 0 18px 18px;
    }
    .brand-text {
        font-size: 2rem;
        font-weight: bold;
        letter-spacing: 2px;
        color: #fff;
        text-shadow: 1px 2px 8px #2a5298cc;
        margin-right: 2rem;
    }
    .navbar-nav .nav-link {
        color: #e0e0e0 !important;
        font-size: 1.1rem;
        font-weight: 500;
        margin: 0 0.7rem;
        border-radius: 6px;
        transition: background 0.2s, color 0.2s;
        padding: 0.45rem 1.1rem;
    }
    .navbar-nav .nav-link.active, .navbar-nav .nav-link:hover {
        background: #2a5298;
        color: #fff !important;
        box-shadow: 0 2px 8px #2a529866;
    }
    .nav-item.dropdown .dropdown-menu {
        background: rgba(35, 39, 47, 0.45);
        border-radius: 14px;
        box-shadow: 0 4px 24px #0003;
        margin-top: 0.5rem;
        min-width: 210px;
        border: none;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        transition: background 0.3s, backdrop-filter 0.3s;
    }
    .dropdown-item {
        padding: 0.7rem 1.5rem;
        color: #e0e0e0;
        font-size: 1.05rem;
        border-radius: 6px;
        transition: background 0.2s, color 0.2s;
    }
    .dropdown-item:hover {
        background: #2a5298;
        color: #fff;
    }
    .dropdown-toggle {
        color: #e0e0e0 !important;
        display: flex;
        align-items: center;
        font-weight: 500;
    }
    .navbar-toggler {
        border: none;
        outline: none;
        box-shadow: none;
    }
    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255,255,255,0.9)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
    .user-avatar {
        width: 2.1em;
        height: 2.1em;
        border-radius: 50%;
        margin-right: 10px;
        object-fit: cover;
        border: 2px solid #2a5298;
        box-shadow: 0 2px 8px #2a529866;
    }
    /* Responsive ajustes extra */
    @@media (max-width: 991px) {
        .brand-text {
            font-size: 1.4rem;
            margin-right: 0.5rem;
        }
        .navbar-nav .nav-link {
            margin: 0.25rem 0;
            padding: 0.7rem 1rem;
        }
    }
</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    
<nav class="navbar navbar-expand-lg navbar-light bg-navbar fixed-top shadow-sm">
    <div class="container">
        <span class="brand-text">Xpectrum</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav ms-auto align-items-lg-center">
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Index" aria-current="page">Inicio</a>
                </li>

                <!-- Ofertas Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="ofertasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Ofertas
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="ofertasDropdown">
                        <li><a class="dropdown-item" href="Promotions/Destinos">Destinos</a></li>
                        <li><a class="dropdown-item" href="Promotions/PaquetesTuristicos">Paquetes turísticos</a></li>
                        <li><a class="dropdown-item" href="Promotions/Alojamientos">Alojamientos</a></li>
                    </ul>
                </li>

                <!-- Mis Viajes Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="misViajesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Mis Viajes
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="misViajesDropdown">
                        <li><a class="dropdown-item" asp-page="/Bookings/Administracion">Administración de viajes</a></li>
                        <li><a class="dropdown-item" asp-page="/Bookings/CheckIn">Check-In</a></li>
                        <li><a class="dropdown-item" asp-page="/Bookings/ReservasAdicionales">Reservas Adicionales</a></li>
                    </ul>
                </li>
                <!-- Servicios Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="serviciosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Servicios
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="serviciosDropdown">

                        @if (User.Identity.IsAuthenticated) // Verifica si el usuario está autenticado
                        {
                            <li><a class="dropdown-item" asp-page="/Boletos/Index">Mis Boletos</a></li>
                            <li><a class="dropdown-item" asp-page="/Help/Help">Ayuda</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" href="/Account/Login">Inicia sesión para ver tu información y boletos</a></li>
                        }
                    </ul>
                </li>


                <li class="nav-item">
                    <a class="nav-link" asp-page="/About/informacion">Contacto</a>
                </li>

                @if (User.Identity.IsAuthenticated)  // Verificar si el usuario está autenticado
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle user-avatar"></i> <!-- Muñequito de usuario -->
                            <span>@TempData["nombre"]</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/Profiles/Profile">Ver perfil</a></li>
                            <li><a class="dropdown-item" href="/Profiles/Configuracion">Configuración</a></li>
                            <li><a class="dropdown-item" href="/Shared/Logout">Cerrar sesión</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-primary btn-sm px-4 fw-semibold" asp-page="/Account/Login" role="button" aria-label="Iniciar sesión">Iniciar sesión</a>
                    </li>
                    <li class="nav-item ms-lg-2">
                        <a class="btn btn-outline-primary btn-sm px-4 fw-semibold" asp-page="/Shared/Register" role="button" aria-label="Registrarse">Registrarse</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>
