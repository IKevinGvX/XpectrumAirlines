@page
@model Xpectrum_Structure.Pages.About.informacionModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.Extensions.Configuration
@{
    ViewData["Title"] = "Contacto - Xpectrum Airlines";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #1f1e55, #0072ff);
            color: white;
            height: 100%;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem;
            position: relative;
        }

        h1, h2, h3 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .section {
            margin-bottom: 5rem;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            color: #ffffff;
            margin-bottom: 1rem;
        }

        .section-description {
            font-size: 1.1rem;
            line-height: 1.6;
            text-align: center;
            max-width: 900px;
            margin: 0 auto;
            margin-bottom: 3rem;
        }

        .scroll-effect {
            animation: fadeIn 2s ease-in-out;
        }


        .contact-info, .commitment {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .contact-item, .commitment-item {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 2rem;
            border-radius: 10px;
            width: 30%;
            text-align: center;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
        }

        .contact-item h3, .commitment-item h3 {
            font-size: 1.6rem;
            color: #64ffda;
        }

        .contact-item p, .commitment-item p {
            font-size: 1rem;
            color: #ccc;
            margin: 1rem 0;
        }

        .commitment-item {
            background-color: rgba(16, 42, 82, 0.8);
        }

        .cta-button {
            display: block;
            background-color: #ff6b6b;
            padding: 0.8rem 2rem;
            color: white;
            text-decoration: none;
            text-align: center;
            margin-top: 2rem;
            border-radius: 5px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .cta-button:hover {
            background-color: #e54343;
        }

        .deadline {
            text-align: center;
            margin-top: 3rem;
        }

        .deadline span {
            font-size: 1.2rem;
            font-weight: 500;
        }

        .form-group input, .form-group textarea {
            width: 100%;
            padding: 1rem;
            border: none;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, 0.7);
            color: #ffffff;
        }

        .submit-btn {
            background-color: #ff6b6b;
            color: #ffffff;
            padding: 1rem 2rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .newsletter-section {
            background-image: linear-gradient(to right, #19153b, #0072ff);
            padding: 5rem 0;
        }

        .newsletter-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .newsletter-content {
            width: 50%;
            margin-right: 2rem;
        }

        .newsletter-form {
            width: 50%;
        }

        .newsletter-form input {
            width: 100%;
            padding: 1rem;
            border: none;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, 0.7);
            color: #ffffff;
        }

        .newsletter-form button {
            background-color: #ff6b6b;
            color: #ffffff;
            padding: 1rem 2rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        /* Hero Section - Estilo consistente con el index */
        .hero-section {
            position: relative;
            background: var(--hero-bg, linear-gradient(135deg, #0a192f 0%, #172a45 100%));
            min-height: 90vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
            color: var(--text);
            padding: 4rem 0;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),   
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%), 
                radial-gradient(circle at 40% 40%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
        }

        .hero-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: center;
            position: relative;
            z-index: 2;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            width: 100%;
        }

        .hero-text {
            color: var(--text);
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            letter-spacing: -1px;
            line-height: 1.1;
            color: var(--hero-text, #ffffff);
        }

        .hero-title .highlight {
            color: var(--accent, #64ffda);
            position: relative;
            display: inline-block;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            opacity: 0.9;
            font-weight: 300;
            color: var(--text-secondary, #8892b0);
            max-width: 600px;
            line-height: 1.6;
        }

        .hero-cta {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .cta-button {
            background-color: var(--accent, #64ffda);
            color: var(--primary, #0a192f);
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .cta-button:hover {
            background-color: var(--text, #ccd6f6);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 64, 175, 0.6);
        }

        .cta-button.secondary {
            background-color: transparent;
            color: var(--text, #ccd6f6);
            border: 1px solid var(--text, #ccd6f6);
        }

        .cta-button.secondary:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .hero-image {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2;
        }

        .hero-logo {
            max-width: 100%;
            height: auto;
            animation: float 6s ease-in-out infinite;
            filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            border: 3px solid rgba(255, 255, 255, 0.1);
        }

        .hero-tag {
            display: inline-block;
            background-color: var(--card, #112240);
            color: var(--accent, #64ffda);
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: 1px;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border, #233554);
        }

        .scroll-indicator {
            position: absolute;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10;
            color: var(--text-secondary, #8892b0);
            font-size: 0.8rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
            opacity: 0.7;
            animation: bounce 2s infinite;
        }

        .mouse {
            width: 30px;
            height: 50px;
            border: 2px solid var(--text-secondary, #8892b0);
            border-radius: 20px;
            display: flex;
            justify-content: center;
            margin: 0.5rem auto 0;
            position: relative;
        }

        .wheel {
            width: 6px;
            height: 8px;
            background-color: var(--text-secondary, #8892b0);
            border-radius: 3px;
            margin-top: 5px;
            animation: scroll 2s infinite;
        }

        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }

        @@keyframes scroll {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(10px); opacity: 0; }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0) translateX(-50%); }
            40% { transform: translateY(-10px) translateX(-50%); }
            60% { transform: translateY(-5px) translateX(-50%); }
        }

        /* Estilos responsivos para el hero */
        @@media (max-width: 1200px) {
            .hero-content {
                grid-template-columns: 1fr 1fr;
                gap: 2rem;
            }

            .hero-title {
                font-size: 3rem;
            }

            .hero-subtitle {
                font-size: 1.3rem;
            }
        }

        @@media (max-width: 992px) {
            .hero-content {
                grid-template-columns: 1fr;
                text-align: center;
                padding: 4rem 2rem;
            }

            .hero-text {
                margin-bottom: 3rem;
                max-width: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .hero-cta {
                justify-content: center;
            }

            .hero-image {
                margin: 2rem auto 0;
                max-width: 500px;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .hero-cta {
                flex-direction: column;
                width: 100%;
                gap: 1rem;
            }

            .cta-button {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .hero-tag {
                font-size: 0.8rem;
                padding: 0.4rem 1.2rem;
            }
        }

        /* Estilos para los encabezados de sección */
        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .section-subtitle {
            display: block;
            color: #64ffda;
            font-size: 1.2rem;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .section-divider {
            width: 80px;
            height: 4px;
            background: #64ffda;
            margin: 1.5rem auto 0;
        }

        /* Estilos para la sección de historia */
        .history-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
        }

        .history-text {
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .history-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem 1rem;
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            background: rgba(100, 255, 218, 0.1);
        }

        .stat-number {
            display: block;
            font-size: 2.5rem;
            font-weight: 700;
            color: #64ffda;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Estilos para la sección de valores */
        .values-section {
            background: rgba(0, 0, 0, 0.1);
            padding: 6rem 0;
            margin: 6rem 0;
        }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .value-card {
            background: rgba(255, 255, 255, 0.05);
            padding: 2.5rem 2rem;
            border-radius: 10px;
            text-align: center;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .value-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background: rgba(100, 255, 218, 0.1);
        }

        .value-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: rgba(100, 255, 218, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #FFFFFFFF;
            transition: all 0.3s ease;
        }

        .value-card:hover .value-icon {
            background: #1f1e55;
            color: #FFFFFFFF;
            transform: rotateY(180deg);
        }

        .value-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        /* Estilos para la sección de flota */
        .fleet-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .fleet-item {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 2rem;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .fleet-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .fleet-image {
            width: 100%;
            height: 200px;
            background: rgba(100, 255, 218, 0.1);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            overflow: hidden;
        }

        .fleet-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .fleet-image i {
            font-size: 4rem;
            color: #64ffda;
        }

        .fleet-item h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        .fleet-item p {
            color: #ccc;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .fleet-specs {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .fleet-specs li {
            margin-bottom: 0.5rem;
            color: #aaa;
            display: flex;
            align-items: center;
        }

        .fleet-specs i {
            margin-right: 0.5rem;
            color: #64ffda;
        }

        /* Estilos para la sección de contacto */
        .contact-section {
            margin: 6rem 0;
        }

        .contact-container {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 4rem;
            margin-top: 3rem;
        }

        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .contact-method {
            display: flex;
            align-items: flex-start;
            gap: 1.5rem;
        }

        .contact-icon {
            width: 60px;
            height: 60px;
            background: rgba(100, 255, 218, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: #FFFFFFFF;
            flex-shrink: 0;
        }

        .contact-details h4 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: white;
        }

        .contact-details p {
            margin: 0.25rem 0;
            color: #aaa;
            font-size: 0.95rem;
        }

        .social-media {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-icon:hover {
            background: #64ffda;
            color: #0a192f;
            transform: translateY(-3px);
        }

        /* Estilos para el formulario de contacto */
        .contact-form {
            background: rgba(255, 255, 255, 0.05);
            padding: 2.5rem;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .contact-form h3 {
            font-size: 1.75rem;
            margin-bottom: 1.5rem;
            color: white;
            text-align: left;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            color: white;
            font-family: inherit;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            outline: none;
            border-color: #64ffda;
            box-shadow: 0 0 0 2px rgba(100, 255, 218, 0.2);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 150px;
        }

        .submit-btn {
            background: #1f1e55;
            color: #FFFFFFFF;
            border: none;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .submit-btn:hover {
            background: #252464FF;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(100, 255, 218, 0.3);
        }

        /* Estilos para la sección de newsletter */
        .newsletter-section {
            background: linear-gradient(135deg, #1930b7, #0a192f);
            padding: 4rem 0;
            border-radius: 10px;
            margin: 6rem 0;
        }

        .newsletter-container {
            max-width: 1000px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 2rem;
        }

        .newsletter-content {
            flex: 1;
            padding-right: 3rem;
        }

        .newsletter-content h3 {
            font-size: 1.75rem;
            margin-bottom: 1rem;
            color: white;
            text-align: left;
        }

        .newsletter-content p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .newsletter-form {
            flex: 1;
            display: flex;
            gap: 1rem;
        }

        .newsletter-form input {
            flex: 1;
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 50px;
            background: rgba(255, 255, 255, 0.9);
            font-size: 1rem;
            color: #333;
        }

        .newsletter-form button {
            background: #0a192f;
            color: white;
            border: none;
            padding: 0 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .newsletter-form button:hover {
            background: #142850;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Estilos responsivos */
        @@media (max-width: 1024px) {
            .history-content {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .history-stats {
                grid-template-columns: repeat(3, 1fr);
            }

            .contact-container {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .newsletter-container {
                flex-direction: column;
                text-align: center;
                gap: 2rem;
            }

            .newsletter-content {
                padding-right: 0;
            }

            .newsletter-content h3,
            .newsletter-content p {
                text-align: center;
            }

            .newsletter-form {
                width: 100%;
                flex-direction: column;
            }
        }

        @@media (max-width: 768px) {
            .hero-section h1 {
                font-size: 3rem;
            }

            .hero-subtitle {
                font-size: 1.25rem;
            }


            .history-stats {
                grid-template-columns: 1fr;
            }


            .section-title {
                font-size: 2rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                padding: 6rem 1rem;
            }


            .hero-section h1 {
                font-size: 2.5rem;
            }


            .section {
                padding: 4rem 0;
            }


            .values-grid {
                grid-template-columns: 1fr;
            }


            .fleet-container {
                grid-template-columns: 1fr;
            }


            .contact-form {
                padding: 1.5rem;
            }


            .newsletter-form {
                flex-direction: column;
            }


            .newsletter-form button {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <header class="hero-section">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <span class="hero-tag">Aerolínea Premium</span>
                    <h1 class="hero-title">Xpectrum <span class="highlight">Airlines</span></h1>
                    <p class="hero-subtitle">Vuela más alto, viaja mejor, experimenta lo extraordinario</p>
                    <div class="hero-cta">
                        <a href="#contacto" class="cta-button">Contáctanos</a>
                        <a href="#flota" class="cta-button secondary">Nuestra Flota</a>
                    </div>
                </div>
                <div class="hero-image">
                    <img src="/img/loggo.jpg" alt="Xpectrum Airlines" class="hero-logo" />
                </div>
            </div>
        </div>
        <div class="scroll-indicator">
            <span>Desplázate</span>
            <div class="mouse">
                <div class="wheel"></div>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Sección: Nuestra Historia -->
        <section class="section">
            <div class="section-header">
                <span class="section-subtitle">Bienvenidos a bordo</span>
                <h2 class="section-title">Nuestra Historia</h2>
                <div class="section-divider"></div>
            </div>
            <div class="history-content">
                <div class="history-text">
                    <p>Fundada en 2020, <strong>Xpectrum Airlines</strong> nació con la visión de revolucionar la industria de la aviación, ofreciendo una experiencia de viaje sin igual que combina innovación, comodidad y sostenibilidad.</p>
