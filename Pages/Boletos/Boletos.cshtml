@page
@model Xpectrum_Structure.Pages.Boletos.BoletosModel
@{
    ViewData["Title"] = "Mis Boletos - Xpectrum";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Mis Boletos - Xpectrum</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.17.12/dist/css/uikit.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.17.12/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.17.12/dist/js/uikit-icons.min.js"></script>
    <style>
        body {
            background: #0f1e2e;
            color: #e0e0e0;
        }

        footer {
            background: #0a1523;
            color: #aaa;
            padding: 1rem;
            text-align: center;
            margin-top: 40px;
        }

        .ticket-card {
            background: #1b2a41;
            color: #e0e0e0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.4);
            margin-bottom: 20px;
        }

        .ticket-card:hover {
            box-shadow: 0 6px 16px rgba(0,255,255,0.3);
        }

        .uk-label {
            background: #00bcd4;
            color: #fff;
        }
    </style>
</head>
<body>

    <div class="uk-container uk-padding">
        <h2 class="uk-heading-line uk-text-center"><span>🎟️ Mis Boletos</span></h2>
        <p class="uk-text-lead uk-text-center">Consulta aquí todos tus boletos activos, pasados o cancelados.</p>

        <!-- Tarjeta ejemplo de boleto -->
        <div class="ticket-card">
            <h3>Vuelo XP1345 - Lima a Cusco</h3>
            <p><strong>Fecha:</strong> 2025-07-20 | <strong>Hora:</strong> 08:45 AM</p>
            <p><strong>Asiento:</strong> 14A | <strong>Estado:</strong> <span class="uk-label">Confirmado</span></p>
            <p><strong>Código QR:</strong> <span class="uk-text-meta">[Aquí va el QR generado o imagen]</span></p>
            <a class="uk-button uk-button-primary uk-border-pill uk-margin-small-top">Ver Detalles</a>
        </div>

        <!-- Segundo boleto -->
        <div class="ticket-card">
            <h3>Vuelo XP1980 - Cusco a Lima</h3>
            <p><strong>Fecha:</strong> 2025-07-25 | <strong>Hora:</strong> 18:15 PM</p>
            <p><strong>Asiento:</strong> 15F | <strong>Estado:</strong> <span class="uk-label uk-label-warning">Pendiente</span></p>
            <p><strong>Código QR:</strong> <span class="uk-text-meta">[Aquí va el QR generado o imagen]</span></p>
            <a class="uk-button uk-button-secondary uk-border-pill uk-margin-small-top">Ver Detalles</a>
        </div>

        <div class="uk-text-center uk-margin-large-top">
            <a class="uk-button uk-button-default uk-border-pill" href="/Index">
                <span uk-icon="arrow-left"></span> Volver a Ayuda
            </a>
        </div>
    </div>

    <footer>
        &copy; 2025 Xpectrum Airlines – Panel del Pasajero
    </footer>

</body>
</html>
