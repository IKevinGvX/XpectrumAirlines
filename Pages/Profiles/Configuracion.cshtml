@page
@model Xpectrum_Structure.Pages.Profile.ConfiguracionModel

@{
    ViewData["Title"] = "Configuración de Seguridad";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Xpectrum Airlines</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.1/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #0a192f;
            --secondary: #172a45;
            --accent: #64ffda;
            --text: #ccd6f6;
            --text-secondary: #8892b0;
            --background: #0a192f;
            --card: #112240;
            --border: #233554;
            --success: #64ffda;
            --warning: #ffb74d;
            --danger: #ff5252;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-image: url('/img/status.gif');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 2rem 0;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            min-height: 100vh;
            padding: 2rem;
        }

        .login-wrapper {
            display: flex;
            max-width: 900px;
            width: 100%;
            background: rgba(10, 25, 47);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 40px -15px rgba(2, 12, 27, 0.7);
            border: 1px solid rgba(100, 255, 218, 0.1);
        }

        .welcome-panel {
            flex: 1;
            padding: 3rem 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(135deg, rgba(16, 42, 82, 0.8) 0%, rgba(10, 25, 47, 0.9) 100%);
            position: relative;
            overflow: hidden;
        }

            .welcome-panel::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 100%;
                height: 200%;
                background: radial-gradient(circle, rgba(100, 255, 218, 0.1) 0%, transparent 70%);
                transform: rotate(30deg);
                z-index: 1;
            }

            .welcome-panel .logo {
                margin-bottom: 2rem;
                z-index: 2;
            }

                .welcome-panel .logo img {
                    max-width: 120px;
                    height: auto;
                    border-radius: 50%;
                    border: 3px solid rgba(100, 255, 218, 0.3);
                }

            .welcome-panel h3 {
                color: #64ffda;
                margin-bottom: 1rem;
                font-size: 1.75rem;
                font-weight: 700;
                z-index: 2;
            }

        .login-form {
            flex: 1;
            padding: 3rem 2.5rem;
            background: rgba(10, 25, 47, 0.9);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form h1 {
                color: #64ffda;
                margin-bottom: 1.5rem;
                font-size: 1.75rem;
                font-weight: 700;
                text-align: center;
            }





        .form-container {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            color: #8892b0;
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
            display: block;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(100, 255, 218, 0.2);
            color: #e6f1ff;
            padding: 0.8rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            font-size: 1rem;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

            .form-control:focus {
                background-color: rgba(0, 0, 0, 0.4);
                border-color: #64ffda;
                box-shadow: 0 0 0 2px rgba(100, 255, 218, 0.3);
                color: #e6f1ff;
                outline: none;
            }

        .btn-primary {
            background: #64b6ff;
            border: none;
            color: #0a192f;
            font-weight: 600;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn-primary:hover {
                background: #64ffda;
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(100, 255, 218, 0.3);
            }

        .btn-outline-secondary {
            border: 1px solid #64ffda;
            color: #64ffda;
            background: transparent;
            transition: all 0.3s ease;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
            text-align: center;
            display: block;
            margin-top: 1rem;
            font-weight: 500;
            font-size: 0.9rem;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn-outline-secondary:hover {
                background: rgba(100, 255, 218, 0.1);
                color: #64ffda;
                transform: translateY(-2px);
            }

        .alert {
            border-radius: 8px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border: 1px solid transparent;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
        }

        .alert-danger {
            background-color: rgba(255, 82, 82, 0.1);
            border-color: rgba(255, 82, 82, 0.2);
            color: #ff6b6b;
        }

        .alert i {
            margin-right: 0.75rem;
            font-size: 1.2rem;
        }

        .alert-success {
            background-color: rgba(100, 255, 218, 0.1);
            border-color: rgba(100, 255, 218, 0.2);
            color: #64ffda;
        }

        .card-header {
            background: linear-gradient(135deg, rgba(16, 42, 82, 0.9) 0%, rgba(10, 25, 47, 0.95) 100%) !important;
            border: none !important;
            padding: 0.75rem 1rem !important;
            text-align: center;
            margin: 0 0 2rem 0;
            border-radius: 8px !important;
        }

            .card-header h5 {
                font-size: 1rem;
                letter-spacing: 1px;
                margin: 0;
                color: #64ffda;
                text-transform: uppercase;
                font-weight: 600;
            }

        @@media (max-width: 768px) {
            .login-wrapper {
                flex-direction: column;
                max-width: 100%;
            }

            .welcome-panel {
                padding: 2rem 1.5rem;
                border-radius: 16px 16px 0 0;
            }

            .login-form {
                padding: 2rem 1.5rem;
            }

            .form-container {
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="login-wrapper">
            <div class="welcome-panel">
                <div class="logo">
                    <img src="/img/loggo.jpg" alt="Xpectrum Airlines Logo">
                </div>
                <h3>Seguridad de Cuenta</h3>
                <p style="color: #8892b0; text-align: center; line-height: 1.6; max-width: 300px; margin: 0 auto 2rem;">
                    Protege tu cuenta con una contraseña segura y mantén tu información personal a salvo.
                </p>
            </div>

            <!-- Configuración Form -->
            <div class="login-form">
                <h1>Configuración de Seguridad</h1>
                <div class="card-header">
                    <h5>Cambiar Contraseña</h5>
                </div>

                <!-- Mensajes de éxito o error -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    </div>
                }

                <!-- Formulario de cambio de contraseña -->
                <form method="post" asp-page-handler="ChangePassword" class="form-container" id="changePasswordForm">
                    <div class="form-group">
                        <label for="CurrentPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Contraseña Actual
                        </label>
                        <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" required
                               placeholder="Ingresa tu contraseña actual" />
                    </div>

                    <div class="form-group">
                        <label for="NewPassword" class="form-label">
                            <i class="fas fa-key me-2"></i>Nueva Contraseña
                        </label>
                        <input type="password" id="NewPassword" name="NewPassword" class="form-control" required
                               placeholder="Crea una nueva contraseña" />
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword" class="form-label">
                            <i class="fas fa-key me-2"></i>Confirmar Nueva Contraseña
                        </label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required
                               placeholder="Confirma tu nueva contraseña" />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        </i>Actualizar Contraseña
                    </button>

                    <a href="javascript:history.back()" class="btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al inicio
                    </a>
                </form>
            </div>
        </div>
    </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.1/dist/sweetalert2.all.min.js"></script>
    <script>
        // Mostrar SweetAlert2 en caso de mensajes de error o éxito
        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        Swal.fire({
                            icon: 'error',
                            title: '¡Error!',
                            text: '@Html.Raw(TempData["ErrorMessage"])',
                            confirmButtonColor: '#64b6ff',
                            confirmButtonText: 'Entendido',
                            background: '#0a192f',
                            color: '#ccd6f6',
                            backdrop: 'rgba(10, 25, 47, 0.8)'
                        });
                    });
                </text>
        }
        else if (TempData["SuccessMessage"] != null)
        {
                <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '@Html.Raw(TempData["SuccessMessage"])',
                            confirmButtonColor: '#64ffda',
                            confirmButtonText: '¡Genial!',
                            background: '#0a192f',
                            color: '#ccd6f6',
                            backdrop: 'rgba(10, 25, 47, 0.8)'
                        });
                    });
                </text>
        }

        // Validación de contraseñas coincidentes
        document.getElementById('changePasswordForm')?.addEventListener('submit', function(e) {
            const newPassword = document.getElementById('NewPassword').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;

            if (newPassword !== confirmPassword) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Las contraseñas no coinciden. Por favor, inténtalo de nuevo.',
                    confirmButtonColor: '#64b6ff',
                    background: '#0a192f',
                    color: '#ccd6f6'
                });
            }
        });
    </script>
</body>
</html>