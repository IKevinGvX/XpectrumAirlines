@page
@model Xpectrum_Structure.Pages.Profile.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}
<header>
    <link href="~/css/register.css" rel="stylesheet" />
</header>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f8ff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            text-align: center;
            padding: 30px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #28a745;
            font-size: 3rem;
            font-weight: bold;
            animation: fadeIn 2s ease-in-out;
        }

        p {
            font-size: 1.2rem;
            color: #555;
            animation: slideIn 2s ease-out;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            font-size: 1.1rem;
            padding: 10px 25px;
            text-transform: uppercase;
            font-weight: bold;
            animation: bounceIn 2s infinite alternate;
        }

        .celebration {
            animation: celebrationAnimation 3s infinite;
            font-size: 50px;
            color: #ffd700;
        }

    </style>
</head>
<body>

    <div class="container">
        <h2>🎉 Welcome to Xpectrum Airlines! 🎉</h2>
        <p>Your registration was successful. You can now enjoy our exclusive services.</p>
        <div class="celebration">✨✨</div>
        <div class="text-center">
            <a class="btn btn-primary" href="/Index" id="goHomeButton">Go to Home</a>
        </div>
    </div>

    <script>
        // Redirect after a short delay
        setTimeout(function() {
            window.location.href = '/Index';
        }, 5000); // Redirect after 5 seconds
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>