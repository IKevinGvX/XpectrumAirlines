@page
@model Xpectrum_Structure.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Xpectrum Airlines</title>
    <link href="~/img/login.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Tu estilo personalizado aquí */
        :root {
            --primary: #0a192f;
            --secondary: #172a45;
            --accent: #64ffda;
            --text: #ccd6f6;
            --text-secondary: #8892b0;
            --background: #0a192f;
            --card: #112240;
            --border: #233554;
            --success: #64ffda;
            --warning: #ffb74d;
            --danger: #ff5252;
            --hero-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --hero-text: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('/img/status.gif');
            background-size: cover;
            background-position: center;
            transition: background-color 0.3s ease;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            background: rgba(0, 0, 0, 0.5); /* Dark overlay */
        }

        .welcome-panel {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 1rem;
            border-radius: 8px;
            width: 100%;
            max-width: 400px;
            margin-bottom: 2rem;
            text-align: center;
            color: var(--text);
        }

        .logo {
            width: 80px;
            height: 80px;
            margin-bottom: 1rem;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
        }

            .logo img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .login-form {
            background-color: var(--card);
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

            .login-form h1 {
                font-size: 2rem;
                margin-bottom: 1.5rem;
                color: var(--hero-text);
            }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                font-size: 1rem;
                margin-bottom: 0.5rem;
                display: block;
                color: var(--text);
            }

            .form-group input {
                width: 100%;
                padding: 0.75rem;
                font-size: 1rem;
                color: var(--text);
                border: 1px solid var(--border);
                border-radius: 4px;
                background-color: var(--secondary);
                transition: border-color 0.3s ease;
            }

        .btn-submit {
            width: 100%;
            padding: 1rem;
            background-color: var(--accent);
            color: var(--primary);
            border: none;
            border-radius: 4px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: var(--success);
            }

        .footer-links {
            margin-top: 1rem;
            font-size: 0.875rem;
        }

            .footer-links a {
                color: var(--accent);
                text-decoration: none;
                margin: 0.5rem;
            }
    </style>

</head>
<body>
    <div class="login-container">
        <div class="welcome-panel">
            <div class="logo">
                <img src="/img/loggo.jpg" alt="Xpectrum Airlines Logo">
            </div>
            <h3>Welcome, Passenger</h3>
        </div>

        <!-- Login Form -->
        <div class="login-form">
            <h1>Login</h1>
            <form method="post">
                <div class="form-group">
                    <label for="email">Email or Membership Number</label>
                    <input type="text" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn-submit">Continue</button>
                <div class="footer-links">
                    <a href="/Account/Register">Create an Account</a>
                    <a href="#">Forgot Your Password?</a>
                </div>
            </form>
        </div>
    </div>
    <script>
        // Mostrar alertas de SweetAlert si hay mensajes de éxito o error
        @if (TempData["SuccessMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Login successful!',
                            text: '@TempData["SuccessMessage"]',
                            showConfirmButton: true,
                            timer: 3000
                        }).then(function() {
                            // Después de mostrar el mensaje, redirige a la página de inicio
                            window.location.href = '/Index'; // Redirigir a la página de inicio
                        });
                    </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'error',
                            title: 'Login failed',
                            text: '@TempData["ErrorMessage"]',
                            showConfirmButton: true,
                            timer: 3000
                        });
                    </text>
        }
    </script>

</body>
</html>
