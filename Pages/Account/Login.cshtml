@page
@model Xpectrum_Structure.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Xpectrum Airlines</title>
    <link href="~/img/login.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Tu estilo personalizado aquí */
        :root {
            --primary: #0a192f;
            --secondary: #172a45;
            --accent: #64ffda;
            --text: #ccd6f6;
            --text-secondary: #8892b0;
            --background: #0a192f;
            --card: #112240;
            --border: #233554;
            --success: #64ffda;
            --warning: #ffb74d;
            --danger: #ff5252;
            --hero-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --hero-text: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0a192f;
            color: #e6f1ff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-image: url('/img/status.gif');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            min-height: 100vh;
            padding: 2rem;
        }
        
        .login-wrapper {
            display: flex;
            max-width: 50%;
            width: 100%;
            background: rgba(10, 25, 47);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 40px -15px rgba(2, 12, 27, 0.7);
            border: 1px solid rgba(100, 255, 218, 0.1);
        }

        .welcome-panel {
            border-top-right-radius: 50%;
            border-bottom-right-radius: 50%;
            flex: 1;
            padding: 3rem 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(135deg, rgba(16, 42, 82, 0.8) 0%, rgba(10, 25, 47, 0.9) 100%);
            position: relative;
            overflow: hidden;
        }
        
        .welcome-panel::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: radial-gradient(circle, rgba(100, 255, 218, 0.1) 0%, transparent 70%);
            transform: rotate(30deg);
            pointer-events: none;
        }

        .welcome-panel h3 {
            color: #64ffda;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            font-weight: 600;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .logo {
            width: 100px;
            height: 100px;
            margin-bottom: 1.5rem;
            overflow: hidden;
            margin: 0 auto 1.5rem;
            padding: 3px;
        }

            .logo img {
                width: 100%;
                height: 100%;
                border-radius: 10%;
                object-fit: cover;
            }

        .login-form {
            flex: 1;
            padding: 3rem 2.5rem;
            background: rgba(10, 25, 47, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form h1 {
                font-size: 2rem;
                margin-bottom: 1.5rem;
                color: var(--hero-text);
            }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                font-size: 1rem;
                margin-bottom: 0.5rem;
                display: block;
                color: var(--text);
            }

            .form-group input {
                width: 100%;
                padding: 0.875rem 1rem;
                font-size: 1rem;
                color: #e6f1ff;
                border: 1px solid rgba(100, 255, 218, 0.2);
                border-radius: 6px;
                background-color: rgba(0, 0, 0, 0.2);
                transition: all 0.3s ease;
                margin-bottom: 1.5rem;
            }

            .form-group input:focus {
                outline: none;
                border-color: #64ffda;
                box-shadow: 0 0 0 2px rgba(100, 255, 218, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 1rem;
            background: #64b6ff;
            color: #0a192f;
            border: none;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-submit:hover {
                background-color: var(--success);
            }

        .footer-links {
            margin-top: 1.5rem;
            font-size: 0.9rem;
            text-align: center;
        }

            .footer-links a {
                color: #64ffda;
                text-decoration: none;
                margin: 0 0.75rem;
                transition: color 0.3s ease;
                position: relative;
                padding-bottom: 2px;
            }

            .footer-links a:after {
                content: '';
                position: absolute;
                width: 0;
                height: 1px;
                bottom: 0;
                left: 0;
                background-color: #64ffda;
                transition: width 0.3s ease;
            }

            .footer-links a:hover:after {
                width: 100%;
            }
    </style>

</head>
<body>
    <div class="login-container">
        <div class="login-wrapper">
            <div class="welcome-panel">
                <div class="logo">
                    <img src="/img/loggo.jpg" alt="Xpectrum Airlines Logo">
                </div>
                <h3>Welcome Back</h3>
                <p style="color: #8892b0; text-align: center; line-height: 1.6; max-width: 300px; margin: 0 auto 2rem;">
                    Sign in to access your account and manage your bookings
                </p>
            </div>

            <!-- Login Form -->
            <div class="login-form">
            <h1>Login</h1>
            <form method="post">
                <div class="form-group">
                    <label for="email">Email or Membership Number</label>
                    <input type="text" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn-submit">Continue</button>
                <div class="footer-links">
                    <a href="/Shared/Register">Create an Account</a>
                        <a href="/Erronea/Forgotpassword">Forgot Your Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Mostrar alertas de SweetAlert si hay mensajes de éxito o error
        @if (TempData["SuccessMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Login successful!',
                            text: '@TempData["SuccessMessage"]',
                            showConfirmButton: true,
                            timer: 3000
                        }).then(function() {
                            // Después de mostrar el mensaje, redirige a la página de inicio
                            window.location.href = '/Index'; // Redirigir a la página de inicio
                        });
                    </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'error',
                            title: 'Login failed',
                            text: '@TempData["ErrorMessage"]',
                            showConfirmButton: true,
                            timer: 3000
                        });
                    </text>
        }
    </script>

</body>
</html>
