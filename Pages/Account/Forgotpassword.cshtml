@page
@model Xpectrum_Structure.Pages.Account.ForgotpasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Xpectrum Airlines</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --primary: #0a192f;
            --secondary: #172a45;
            --accent: #64ffda;
            --text: #ccd6f6;
            --text-secondary: #8892b0;
            --background: #0a192f;
            --card: #112240;
            --border: #233554;
            --success: #64ffda;
            --warning: #ffb74d;
            --danger: #ff5252;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0a192f;
            color: #e6f1ff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-image: url('/img/status.gif');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .reset-password-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            min-height: 100vh;
            padding: 2rem;
        }

        .reset-password-wrapper {
            display: flex;
            max-width: 50%;
            height: 500px;
            width: 100%;
            background: rgba(10, 25, 47, 0.8);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 40px -15px rgba(2, 12, 27, 0.7);
            border: 1px solid rgba(100, 255, 218, 0.1);
        }

        .reset-password-panel {
            flex: 1;
            padding: 3rem 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(135deg, rgba(16, 42, 82, 0.8) 0%, rgba(10, 25, 47, 0.9) 100%);
            position: relative;
            overflow: hidden;
        }

            .reset-password-panel h3 {
                color: #64ffda;
                font-size: 2rem;
                margin-bottom: 1rem;
                font-weight: 600;
                text-align: center;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

        .reset-password-form {
            flex: 1;
            padding: 2rem 2.5rem;
            background: rgba(10, 25, 47, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow-y: auto;
            max-height: 100%;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                color: #64ffda;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            color: #e6f1ff;
            border: 1px solid rgba(100, 255, 218, 0.2);
            border-radius: 6px;
            background-color: rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #64ffda;
                box-shadow: 0 0 0 2px rgba(100, 255, 218, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 1rem;
            background: #64b6ff;
            color: #0a192f;
            border: none;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-submit:hover {
                background-color: var(--success);
            }

        .footer-links {
            margin-top: 1.5rem;
            font-size: 0.9rem;
            text-align: center;
        }

            .footer-links a {
                color: #64ffda;
                text-decoration: none;
                margin: 0 0.75rem;
                transition: color 0.3s ease;
                position: relative;
                padding-bottom: 2px;
            }

                .footer-links a:after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 1px;
                    bottom: 0;
                    left: 0;
                    background-color: #64ffda;
                    transition: width 0.3s ease;
                }

                .footer-links a:hover:after {
                    width: 100%;
                }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <div class="reset-password-wrapper">
            <div class="reset-password-panel">
                <h3>Reset Password</h3>
                <p style="color: #8892b0; text-align: center; line-height: 1.6; max-width: 300px; margin: 0 auto 2rem;">
                    Enter the email address associated with your account to receive a password reset link.
                </p>
            </div>

            <div class="reset-password-form">
                <h1>Send Reset Link</h1>
                <form method="post">
                    <div class="form-group">
                        <label for="Email">Email Address</label>
                        <input type="email" class="form-control" id="Email" name="Input.Email" />
                    </div>

                    <button type="submit" class="btn-submit">Send Reset Link</button>

                    <div class="footer-links">
                        <span>Remember your password? </span>
                        <a href="/Account/Login">Sign In</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
