
@page "{token}"
@model Xpectrum_Structure.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Xpectrum Airlines</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="reset-password-container">
        <h1>Restablecer Contraseña</h1>
        <form method="post">
            <div class="form-group">
                <label for="Password">Nueva Contraseña</label>
                <input type="password" class="form-control" id="Password" name="Input.Password" required />
            </div>
            <button type="submit" class="btn-submit">Restablecer Contraseña</button>
        </form>
    </div>
</body>
</html>
